<div  class="container">

    <h3 style="font-size: 3rem;color: #AB650A;">Comments</h3>


   
    <form id="new-comment-form" class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-sm-2" for="new-comment-username">User Name:</label>
            <div class="col-sm-10">                
                <input id="new-comment-username" type="text" value="{{username}}"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="new-comment-body">New Comment:</label>
            <div class="col-sm-10">
                <textarea rows="4" cols="50" id="new-comment-body" placeholder="Enter Comment"></textarea>                
            </div>
        </div>
        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Add New Comment</button>
            </div>
        </div>
        
    </form>

    <div id="error-message-area">

<table class="table  table-striped ">
         <thead>
            <tr>
                <th>UserName</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
              
        {{#each comment}}
            <tr>
                <td>{{this.username}}</td>
                <td>{{this.comment}}</td>
            </tr>
        {{/each}}
    </tbody>     
                
</table>
</div>
</div>
<p class="ErrorMessage">{{error}}</p>